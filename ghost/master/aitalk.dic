OnAiTalk
{
	if CHAIN.IDName == ""
	{
		if TalkTopic == "questions"; LastTalk = QuestionTalk
		elseif TalkTopic == "chatter"; LastTalk = RandomTalk
		else //Both
		{
			if RAND(2); LastTalk = OnAskMeAQuestion
			else; LastTalk = RandomTalk
		}
	}
	else
	{
		LastTalk = ChainTalk
	}
	LastTalk += "\_w[2000]"
	LastTalk
}

OnAskMeAQuestion
{
	"%(input)" + QuestionTalk
}

QuestionTalk : nonoverlap_pool
{
	"\0\b[4]%(speak)%(forward)%(doyou)... %(neutral)%(nervous)consider yourself edible?"
	"\0\b[4]%(speak)%(plead)On scale of %(scale), how would you rate this interview?"
}

RandomTalk : nonoverlap_pool
{
	"\0\b[4]%(tie)%(ceiling)%(narration)%(italic)He seems like he'd make a good boss.\w8.\w8.\w8\w8?%(italicoff)"
	"\0\b[4]%(agitated)%(behind)%(narration)%(italic)Oh! He noticed a %(bug) crawling on the wall...%(italicoff)"
}